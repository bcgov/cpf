<?xml version="1.0" encoding="UTF-8"?>

<web-fragment
  xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://xmlns.jcp.org/xml/ns/javaee
    https://xmlns.jcp.org/xml/ns/javaee/web-fragment_3_1.xsd
  "
  version="3.1"
>
  <name>ca_bc_gov_open_cpf_web_app</name>
  <ordering>
    <after>
      <name>com_revolsys_open_web_default</name>
    </after>
  </ordering>
  
  <listener>
    <listener-class>ca.bc.gov.open.cpf.api.web.CpfLoggingContextListener</listener-class>
  </listener>

  <listener>
    <listener-class>com.revolsys.ui.web.servlet.listener.ContextLoaderListener</listener-class>
  </listener>

  <filter>
    <filter-name>transactionFilter</filter-name>
    <filter-class>ca.bc.gov.open.cpf.api.web.TransactionFilter</filter-class>
  </filter>

  <filter>
    <filter-name>serverRenameFilter</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>

  <filter>
    <filter-name>springSecurityFilterChain</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>

  <filter>
    <filter-name>workerSecurityFilter</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>
 
  <filter>
    <filter-name>secureServerRenameFilter</filter-name>
    <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>transactionFilter</filter-name>
    <url-pattern>/ws/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>transactionFilter</filter-name>
    <url-pattern>/admin/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>serverRenameFilter</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>springSecurityFilterChain</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>workerSecurityFilter</filter-name>
    <url-pattern>/worker/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <filter-mapping>
    <filter-name>secureServerRenameFilter</filter-name>
    <url-pattern>/secure/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
  </filter-mapping>

  <servlet>
    <servlet-name>cpf</servlet-name>
    <servlet-class>com.revolsys.ui.web.servlet.DispatcherServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/ws.json</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/ws.xml</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/ws/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/worker/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/view/*</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/admin/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>cpf</servlet-name>
    <url-pattern>/secure/*</url-pattern>
  </servlet-mapping>
</web-fragment>